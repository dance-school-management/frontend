{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["./components/*"],
      "@/lib/*": ["./lib/*"],
      "@/*": ["./app/*"],
      "@repo/ui/*": ["../../packages/ui/src/*"],
      "@/modules/*": ["./modules/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strict": true,
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
